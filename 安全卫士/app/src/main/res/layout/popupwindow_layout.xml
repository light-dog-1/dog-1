<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/local_popup_bg">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="卸载"
		android:id="@+id/popupwindow_tv_uninstall"
		android:drawableTop="@drawable/img1"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="启动"
		android:id="@+id/popupwindow_tv_start"
		android:drawableTop="@drawable/img2"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="分享"
		android:id="@+id/popupwindow_tv_share"
		android:drawableTop="@drawable/img3"/>

</LinearLayout>


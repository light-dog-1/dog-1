<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="添加黑名单号码"
		style="@style/TitleStyle"
		android:background="#FFF57E10"/>

	<EditText
		android:layout_width="match_parent"
		android:ems="10"
		android:layout_height="wrap_content"
		android:id="@+id/dialogaddblacknumber_et_phone"
		android:hint="请输入拦截号码"
		android:textColor="#000"
		android:inputType="phone"/>

	<RadioGroup
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="center"
		android:id="@+id/dialog_add_rg">

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_add_rb_sms"
			android:checked="true"
			android:text="短信"
			android:textColor="#000"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_add_rb_phone"
			android:text="电话"
			android:textColor="#000"/>

		<RadioButton
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/dialog_add_rb_all"
			android:text="所有"
			android:textColor="#000"/>

	</RadioGroup>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="确定"
			android:layout_weight="1.0"
			android:id="@+id/dialog_add_submit"
			android:textColor="#000"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="取消"
			android:id="@+id/dialog_add_cancal"
			android:layout_weight="1.0"
			android:textColor="#000"/>

	</LinearLayout>

</LinearLayout>

